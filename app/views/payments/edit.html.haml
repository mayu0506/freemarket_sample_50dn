= render 'products/product-header'
.breadcrumbs
  .breadcrumbs_list
    - breadcrumb :payments
    = breadcrumbs separator: " #{content_tag(:i, '', class: 'fa fa-angle-right')} "
= render 'products/sell-btn'
%main.mypage.clearfix
  = render 'users/side'

  .cardPage
    .cardPage__header
      %h2 クレジットカード情報入力
    .cardPage__content
      .cardPage__content__form
        = form_tag("/payments", method: :post, id: 'charge-form') do
          .register-inner_contents
            .form-group
              %span.registration_font カード番号
              %span.form-require 必須
              %input.input.number.card-input{maxlength: '16', name: 'number', placeholder: 'カード番号', type: 'text', id: 'payment_card_no'}/
              .cardPage__content__form--image
              = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?376951604', class: 'visa-card'
              = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?376951604', class: 'master-card'
              = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?376951604', class: 'saison-card'
              = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?376951604', class: 'jcb-card'
              = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?376951604', class: 'american-express'
              = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?376951604', class: 'diners-club'
              = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?376951604', class: 'discover'

            .form-group
              %span.registration_font 有効期限
              %span.form-require 必須
              .cardPage__content__form--error
              .expiration_date_box
                .expiration_date_box__wrap
                  %select.exp_month#payment_expiration_date_1i{maxlength: '2', name: 'exp_month', type: 'text'}
                    %option{value: ""} ---
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %i.fa.fa-angle-down.payment-select-icon
                  %text.expiration_date_box__text 月

              .expiration_date_box
                .expiration_date_box__wrap
                  %select.exp_year#payment_expiration_date_2i{maxlength: '4', name: 'exp_year', type: 'text'}
                    %option{value: ""} ---
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %i.fa.fa-angle-down.payment-select-icon
                  %text.expiration_date_box__text 年

            .form-group
              %span.registration_font セキュリティ番号
              %span.form-require 必須
              .cardPage__content__form--error
              %input.cvc.input-default{maxlength: "3", name: "cvc", placeholder: "カード背面もしくは４桁もしくは３桁の番号", type: "text", id: "payment_card_cvc"}
              .card-info
                カード裏面の番号とは?
              .actions
                %button.register-member#submit-button{type: "submit"} 追加する


= render 'products/footer-banner'
= render 'products/footer'
