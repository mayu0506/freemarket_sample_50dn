            .bodyMain_pickup_cotegory_box_items.clearfix
              = render partial: 'product', collection: @baby_products
            .viewAll
              =link_to "すべての商品を見る", products_path
          - else
            .no-item
              %p まだ出品されていません

          -# コスメの新着
          .bodyMain_pickup_cotegory_box--title
            = link_to "#{@beauty.name}新着アイテム", "#", class: "category-title__link"
          - if @beauty_products.present?
            .bodyMain_pickup_cotegory_box_items.clearfix
              = render partial: 'product', collection: @beauty_products
            .viewAll
              =link_to "すべての商品を見る", products_path
          - else
            .no-item
              %p まだ出品されていません

  = render 'sell-btn'
  = render 'footer-banner'
  = render 'footer'
