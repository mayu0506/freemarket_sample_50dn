.contents
  = render 'users/eachpage-header'       
  .login-mainContents
    .login-singleContent
      .login-singleContent__head 
        %p.message
          アカウントをお持ちでない方はこちら
        = link_to '/users/sign_up/index' do
          %input{type: "button",class: "login-registrationButton", value: "新規会員登録"}
      .login-singleContent__inner
        .login-singleContent__inner__form
          -# .loginForm--label
          -#   =link_to  user_facebook_omniauth_authorize_path, class: "google-button" do
          -#     %ul.loginFacebook
          -#       %li.loginFacebook-list
          -#         = fa_icon 'facebook-square', class: 'loginFacebook-icon'
          -#       %li.loginFacebook-text
          -#         Facebookで登録
          -# .loginForm--label
          -#   =link_to user_google_oauth2_omniauth_authorize_path, class: "google-button"  do
          -#     %ul.loginGoogle
